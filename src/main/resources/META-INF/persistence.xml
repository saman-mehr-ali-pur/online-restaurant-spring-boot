<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="2.0">

    <persistence-unit name="jpa-unit">

        <class>com.online_restaurant.backend.model.User</class>
        <class>com.online_restaurant.backend.model.Food</class>
        <class>com.online_restaurant.backend.model.Comment</class>
        <class>com.online_restaurant.backend.model.Address</class>
        <class>com.online_restaurant.backend.model.Order</class>
        <class>com.online_restaurant.backend.model.Payment</class>
        <class>com.online_restaurant.backend.model.Image</class>
        <class>com.online_restaurant.backend.model.Like</class>
<!--        <class>com.online_restaurant.backend.model.Like</class>-->



        <properties>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/restaurant"/>

            <!-- Credentials -->
            <property name="jakarta.persistence.jdbc.user"
                      value="root"/>
            <property name="jakarta.persistence.jdbc.password"
                      value="Saman1382!"/>

            <!-- Automatic schema export -->
            <property name="jakarta.persistence.schema-generation.database.action"
                      value="update"/>

            <!-- SQL statement logging -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.highlight_sql" value="true"/>

        </properties>

    </persistence-unit>

</persistence>